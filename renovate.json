{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "docker:enableMajor"
  ],
  "packageRules": [
    {
      "matchFileNames": ["unifi/docker-compose.yml"],
      "matchPackageNames": ["mongo"],
      "allowedVersions": "8.0"
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ]
}
